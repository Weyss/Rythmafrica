{% extends 'log.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container w-25 d-flex align-items-center" style="height:100vh;">
    <div class="bg-light d-flex flex-column justify-content-center p-5 rounded" style="height: 85%;">
        {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
        {% endfor %}

        <h1>Enregistrer un admin</h1>

        {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.lastname, { 'label': 'Nom'}) }}
        {{ form_row(registrationForm.firstname, { 'label': 'Pr√©nom'}) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword.first, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.plainPassword.second,{
            label: 'Confirmer Mot de Passe'}
        ) }}

        <button type="submit" class="btn btn-outline-primary align-self-center">Enregsitrer</button>
        {{ form_end(registrationForm) }}
    </div>
</div>
{% endblock %}