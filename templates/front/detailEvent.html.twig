{% extends 'layout.html.twig' %}

{% block title %}Détail Événement{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset ('css/style-detail.css') }}">
{% endblock %}

{% block main %}
<section>
    <article id="detailEvent">
        <img src="{{ asset('upload/eventPictures/'~ event.picture) }}" alt="">
        <p>{{ event.description }}</p>
        <div id="schedule">
            <p>Date de début : {{ event.startingAt | date("d/m/Y H:i") }}</p>
            <p>Date de fin : {{ event.closingAt | date("d/m/Y H:i") }}</p>
        </div>
    </article>
    <aside>
        <h2>Artistes présents</h2>
        {% for artist in event.artists %}
        <div>
            <img src="{{ asset('upload/artistPictures/'~ artist.picture) }}" alt="">
            <h3><a href="{{ path('detail_artist', {id:artist.id}) }}">{{ artist.nickname }}</a></h3>
        </div>
        {% endfor %}
        <p id="adress">{{ event.adress }}, {{ event.zipCode }} {{ event.town }}</p>
        <iframe scrolling="no" marginheight="0" marginwidth="0" src="{{ event.iframe }}" width="100%" height="600" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
    </aside>
</section>
{% endblock %}
