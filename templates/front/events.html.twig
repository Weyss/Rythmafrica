{% extends 'layout.html.twig' %}

{% block title %}Nos Événements{% endblock %}
{% block stylesheets %}
<link rel="stylesheet" href="{{ asset ('css/style-list.css') }}">
{% endblock %}

{% block main %}
<section>
    {% for event in allEvents %}
    <article>
        <img src="{{ asset('upload/eventPictures/'~ event.picture) }}" alt="{{ event.picture }}">
        <h3><a href="{{ path('detail_event', {id:event.id}) }}">{{ event.title }}</a></h3>
    </article>
    {% endfor %}
</section>
{% endblock %}
