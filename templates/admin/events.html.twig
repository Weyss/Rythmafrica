{% extends 'admin.html.twig' %}

{% block title %}- Liste des artistes
{% endblock %}

{% block body %}
	<main class="container" style="margin-top:7rem">
		<div class="d-flex flex-column">
			<button id="js-addEvent" class="btn btn-primary align-self-end js-form" data-toggle="modal" data-target="#form">Ajouter un événement</button>
			<h3>Listes des Événements</h3>
			<form class="form-inline my-2 my-lg-0 align-self-end">
				<input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
				<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
			</form>
		</div>

		<table class="table mt-5" id="js-events">
			<thead>
				<tr>
					<th scope="col" class="auto">Image</th>
					<th scope="col">Titre</th>
					<th scope="col">Desciption</th>
					<th scope="col">Artistes présents</th>
					<th scope="col">Action</th>
				</tr>
			</thead>
			<tbody>
				{% for event in allEvents %}
					<tr>
						<td><img src="{{ asset('upload/eventPictures/'~ event.picture) }}" alt="" class="card-img" style="width:10rem; height: 10rem;"></td>
						<td>{{ event.title}}</td>
						<td>{{ event.description}}</td>
						<td></td>
						<td class="d-flex flex-column">
							<a href="{{ path('event_edit', {id:event.id}) }}" data-entity="event" data-toggle="modal" data-id="{{ event.id }}" class="btn btn-primary btn-sm js-edit">Éditer</a>
							<a href="{{ path('event_delete', {id:event.id}) }}" data-entity="event" data-toggle="modal" data-id="{{ event.id }}" class="btn btn-primary btn-sm mt-2 js-delete">Supprimer</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		<nav aria-label="Page navigation example">
			<ul class="pagination justify-content-center">
				<li class="page-item disabled">
					<a class="page-link" href="#" aria-label="Previous">
						<span aria-hidden="true">&laquo;</span>
						<span class="sr-only">Previous</span>
					</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">1</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">2</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#">3</a>
				</li>
				<li class="page-item">
					<a class="page-link" href="#" aria-label="Next">
						<span aria-hidden="true">&raquo;</span>
						<span class="sr-only">Next</span>
					</a>
				</li>
			</ul>
		</nav>
	</main>
{% endblock %}
