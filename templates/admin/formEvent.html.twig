{% form_theme formEvent 'bootstrap_4_layout.html.twig' %}

{{ form_start(formEvent) }}

{{ form_row(formEvent.title, { 'label': 'Titre de l\'événement' }) }}
{{ form_row(formEvent.description) }}
{% if editMode != null %}
    <img src="{{ asset('upload/eventPictures/'~ picture) }}" alt="" style="width:10rem">
    <p>{{ picture }}</p>
{% endif %}
{{ form_row(formEvent.picture, { 'label': 'Image' }) }}
{{ form_row(formEvent.startingAt, { 'label': 'Date de début' }) }}
{{ form_row(formEvent.closingAt, { 'label': 'Date de fin' }) }}
{{ form_row(formEvent.artists, { 'label': 'Les artistes' }) }}

<div style="display: flex;">
    {{ form_row(formEvent.longitude, { 'label': 'Longitude', 'attr':{'style' : 'width:90%'} }) }}
    {{ form_row(formEvent.latitude, { 'label': 'Latitude', 'attr':{'style' : 'width:90%'}} ) }}
</div>

{{ form_row(formEvent.adress, { 'label': 'Adresse' }) }}
{{ form_row(formEvent.town, { 'label': 'Ville' }) }}
{{ form_row(formEvent.zipCode, { 'label': 'Code Postal' }) }}
{{ form_row(formEvent.pays, { 'label': 'Pays' }) }}
{{ form_row(formEvent.entranceFee, { 'label': 'Prix d\'entrée' }) }}

<button type="submit" id="js-save" class="btn btn-primary">
    {% if editMode != null %}
        Modifier
    {% else %}
        Ajouter
    {% endif %}
</button>

{{ form_end(formEvent) }}
